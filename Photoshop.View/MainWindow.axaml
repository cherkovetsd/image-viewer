<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Photoshop.View.MainWindow"
        Title="Photoshop.View">

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="{Binding OpenImage}" Header="_Open..." />
                <MenuItem Command="{Binding SaveImage}" Header="_Save as..." />
            </MenuItem>
        </Menu>
        <Grid ColumnDefinitions="*,200">
            <Image Grid.Column="0" Source="{Binding Image, Mode=TwoWay}"></Image>
            
            <StackPanel Grid.Column="1" DataContext="{Binding ColorSpaceContext}">
                <TextBlock Margin="0, 0, 0, 7">Color space</TextBlock>
                <ComboBox x:Name="ColorSpace"></ComboBox>
                
                <TextBlock Margin="0, 30, 0, 7">Channels to display:</TextBlock>
                <CheckBox IsChecked="True" Content="{Binding FirstChannelName}"></CheckBox>
                <CheckBox IsChecked="True" Content="{Binding SecondChannelName}"></CheckBox>
                <CheckBox IsChecked="True" Content="{Binding ThirdChannelName}"></CheckBox>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>